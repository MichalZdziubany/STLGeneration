//
// PYRAMID TEMPLATE
// Square pyramid using polyhedron.
// Parameters injected by backend.
//

base_size = {{BASE_SIZE}};   // width & depth
height    = {{HEIGHT}};      // height

polyhedron(
    points=[
        [0, 0, 0],
        [base_size, 0, 0],
        [base_size, base_size, 0],
        [0, base_size, 0],
        [base_size/2, base_size/2, height]   // apex centered above base
    ],
    faces=[
        [0,1,2,3],   // bottom
        [0,1,4],     // sides
        [1,2,4],
        [2,3,4],
        [3,0,4]
    ]
);
